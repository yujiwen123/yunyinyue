{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index"
		},
		{
			"path": "pages/search/search",
			"style": {
				"navigationBarTitleText": "搜索音乐"
			}
		},
		{
			"path": "pages/video/video",
			"style": {
				"navigationBarTitleText": "视频"
			}
		},
		{
			"path": "pages/personal/personal",
			"style": {
				"navigationBarTitleText": "我的"
			}
		},
		{
			"path": "pages/login/login",
			"style": {
				"navigationBarTitleText": "登录"
			}
		}
	],
	"subPackages": [{
			"root": "songPackage",
			"pages": [{
					"path": "pages/recommendSong/recommendSong",
					"style": {
						"navigationBarTitleText": "每日推荐",
						"navigationBarBackgroundColor": "#91cdf6"
					}
				},
				{
					"path": "pages/songDetail/songDetail",
					"style": {
						"navigationBarTitleText": "",
						"enablePullDownRefresh": false
					}
				}
			]
		},
		{
			"root": "otherPackage",
			"pages": [{
				"path": "pages/other/other",
				"style": {
					"navigationBarTitleText": ""
				}
			}]
		}
	],
	"preloadRule": {
		"pages/index/index": {
			"network": "all",
			"packages": ["songPackage"]
		}
	},
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "云音乐",
		"navigationBarBackgroundColor": "#de3c33"
	},
	"tabBar": {
		"color": "#333",
		"selectedColor": "#d43c33",
		"list": [{
				"pagePath": "pages/personal/personal",
				"iconPath": "static/images/tabs/tab-my.png",
				"selectedIconPath": "static/images/tabs/tab-my-current.png",
				"text": "我的"
			},
			{
				"pagePath": "pages/index/index",
				"iconPath": "static/images/tabs/tab-home.png",
				"selectedIconPath": "static/images/tabs/tab-home-current.png",
				"text": "发现"
			},
			{
				"pagePath": "pages/video/video",
				"iconPath": "static/images/tabs/video.png",
				"selectedIconPath": "static/images/tabs/video2.png",
				"text": "视频"
			}
		]
	}
}
