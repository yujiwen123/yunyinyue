.songDetailContainer {
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.5);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.songDetailContainer .circle {
  position: relative;
  z-index: 100;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #fff;
  margin: 10rpx 0;
}
.songDetailContainer .needle {
  position: relative;
  z-index: 99;
  left: 60rpx;
  top: -40rpx;
  width: 192rpx;
  height: 274rpx;
  -webkit-transform-origin: 40rpx 0;
          transform-origin: 40rpx 0;
  -webkit-transform: rotate(-20deg);
          transform: rotate(-20deg);
  -webkit-transition: -webkit-transform 1s;
  transition: -webkit-transform 1s;
  transition: transform 1s;
  transition: transform 1s, -webkit-transform 1s;
}
.songDetailContainer .needleRotate {
  -webkit-transform: rotate(0);
          transform: rotate(0);
}
.songDetailContainer .discContainer {
  position: relative;
  top: -170rpx;
  width: 598rpx;
  height: 598rpx;
}
.songDetailContainer .discContainer .disc {
  width: 598rpx;
  height: 598rpx;
}
.songDetailContainer .discContainer .musicImg {
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  width: 370rpx;
  height: 370rpx;
  border-radius: 50%;
}
.songDetailContainer .discAnimation {
  -webkit-animation: disc 4s linear infinite;
          animation: disc 4s linear infinite;
  -webkit-animation-delay: 1s;
          animation-delay: 1s;
}
@-webkit-keyframes disc {
to {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}
@keyframes disc {
to {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}
.songDetailContainer .musicControl {
  position: absolute;
  bottom: 40rpx;
  border-top: 1rpx solid #fff;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.songDetailContainer .musicControl text {
  width: 20%;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  color: #fff;
  font-size: 50rpx;
}
.songDetailContainer .musicControl .big {
  font-size: 80rpx;
}
.songDetailContainer .progressControl {
  position: absolute;
  bottom: 200rpx;
  width: 640rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.songDetailContainer .progressControl .barControl {
  position: relative;
  width: 450rpx;
  height: 4rpx;
  background-color: rgba(0, 0, 0, 0.4);
  margin: auto;
}
.songDetailContainer .progressControl .barControl .audioCurrentTimeBar {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  height: 4rpx;
  background-color: red;
}
.songDetailContainer .progressControl .barControl .audioCurrentTimeBar .audioCircle {
  position: absolute;
  right: -12rpx;
  top: -4rpx;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #fff;
}

