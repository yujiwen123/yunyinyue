.recommendSongContainer .header {
  position: relative;
  width: 100%;
  height: 300rpx;
}
.recommendSongContainer .header image {
  width: 100%;
  height: 100%;
}
.recommendSongContainer .header .date {
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-45%, -45%);
          transform: translate(-45%, -45%);
  width: 300rpx;
  height: 100rpx;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  font-size: 38rpx;
}
.recommendSongContainer .ListContainer {
  position: relative;
  top: -20rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
  background: #fff;
}
.recommendSongContainer .ListContainer .listHeader {
  height: 80rpx;
  line-height: 80rpx;
}
.recommendSongContainer .ListContainer .listHeader .changeMore {
  float: right;
}
.recommendSongContainer .ListContainer .listScroll {
  height: calc(100vh - 380rpx);
}
.recommendSongContainer .ListContainer .listScroll .scrollItem {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: relative;
  margin-bottom: 20rpx;
}
.recommendSongContainer .ListContainer .listScroll .scrollItem image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}
.recommendSongContainer .ListContainer .listScroll .scrollItem .musicInfo {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  margin-left: 20rpx;
}
.recommendSongContainer .ListContainer .listScroll .scrollItem .musicInfo text {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.recommendSongContainer .ListContainer .listScroll .scrollItem .iconfont {
  position: absolute;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
}

