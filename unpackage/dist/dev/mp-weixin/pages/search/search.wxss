.searchContainer {
  padding: 0 20rpx;
}
.searchContainer .header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx 0;
}
.searchContainer .header .searchInput {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  background-color: rgba(200, 200, 200, 0.3);
  border-radius: 30rpx;
}
.searchContainer .header .searchInput input {
  margin-left: 50rpx;
  height: 60rpx;
}
.searchContainer .header .searchInput .placeholder {
  font-size: 28rpx;
}
.searchContainer .header .searchInput .clear {
  position: absolute;
  z-index: 10;
  right: 30rpx;
  top: 0;
  font-size: 30rpx;
}
.searchContainer .header .cancel {
  width: 100rpx;
  text-align: center;
}
.searchContainer .header .searchIcon {
  position: absolute;
  margin-left: 15rpx;
}
.searchContainer .hotContainer .title {
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #eee;
}
.searchContainer .hotContainer .hotList {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.searchContainer .hotContainer .hotList .hotItem {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
}
.searchContainer .hotContainer .hotList .hotItem .order {
  margin: 0 10rpx;
}
.searchContainer .hotContainer .hotList .hotItem .iconImage {
  height: 25rpx;
  margin-left: 10rpx;
}
.searchContainer .showSearchContent .searchContent {
  color: #d43c33;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  border-bottom: 1rpx solid #d43c33;
}
.searchContainer .showSearchContent .searchItem {
  height: 80rpx;
  line-height: 80rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.searchContainer .showSearchContent .searchItem .content {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  margin-left: 20rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 26rpx;
  -webkit-flex-wrap: nowrap;
          flex-wrap: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.searchContainer .history {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  line-height: 50rpx;
}
.searchContainer .history .title {
  font-size: 28rpx;
  height: 50rpx;
}
.searchContainer .history .historyItem {
  font-size: 26rpx;
  background-color: #ededed;
  border-radius: 20rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.searchContainer .history .delete {
  position: absolute;
  right: 15rpx;
  bottom: 10rpx;
  font-size: 36rpx;
}

